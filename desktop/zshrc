# Format JSON data
function format_json {
    python3 -m json.tool $1 > /tmp/tmpdata.json
    rm $1
    cat /tmp/tmpdata.json > $1
    rm /tmp/tmpdata.json
}

# Length of a given string
# Usage: strlen "string in quotes"
function strlen() {
    temp=$1; echo "${#temp}"
}
